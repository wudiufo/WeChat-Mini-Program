.container {
  /* 尽量都设宽度为100%，防止出错 */
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 100rpx;
  align-items: center;
  justify-content: space-between;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
}

.epsoide {
  margin-left: 20rpx;
  margin-top: 4rpx;
}

.like {
  margin-top: 6rpx;
}

.nav {
  position: absolute;
  bottom: 40rpx;
}

.like-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-right: 30rpx;
}

.share-btn {
  margin-top: 28rpx;
  margin-right: 10rpx;
}

.share {
  width: 40rpx;
  height: 40rpx;
}
