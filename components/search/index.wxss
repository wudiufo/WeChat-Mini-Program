.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  /* padding: 0 15px; */
}

.header {
  background-color: #fff;
  position: fixed;
  z-index: 99;
  height: 100rpx;
  border-top: 1px solid #f5f5ff;
  border-bottom: 1px solid #f5f5ff;
  display: flex;
  flex-direction: row;
  width: 750rpx;
  /* justify-content: space-between; */
  align-items: center;
  /* padding: 0 15px; */
}

.search-container {
  display: inline-flex;
  flex-direction: row;
  /* justify-content: space-between; */
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 50px;
  margin-left: 20rpx;
}

.icon {
  width: 14px;
  height: 14px;
  margin: 0 8px 0 12px
}

.bar {
  border-top-right-radius: 15px;
  border-bottom-right-radius: 15px;
  display: inline-block;
  height: 34px;
  width: 500rpx;
  font-size: 14px;
}

.cancel-img {
  width: 14px;
  height: 14px;
  margin-right: 10px;
}

.cancel {
  line-height: 34px;
  width: 60px;
  text-align: center;
  display: inline-block;
  border: none;
}

.history {
  width: 690rpx;
  margin: 40rpx 0 20rpx 0;
  display: flex;
  font-size: 14px;
  margin-top: 160rpx;
  flex-direction: column;
}

.title {
  line-height: 15px;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* margin-left:100px; */
}

.chunk {
  height: 15px;
  width: 5px;
  background-color: #000;
  display: inline-block;
  margin-right: 10px;
}

.hot-search {
  margin-top: 70rpx;
}

.tags {
  /* padding-left:15px; */
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  /* justify-content: flex-start;  */
  margin-top: 24rpx;
  padding-left: 15px;
  width: 630rpx;
}

.tags v-tag {
  margin-right: 10px;
  margin-bottom: 10px;
  /* padding-bottom: 10px; */
  /* margin-right:6px; */
}

.books-container {
  width: 570rpx;
  margin-top: 100rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 0 90rpx 0 90rpx;
  justify-content: space-between;
}

.books-container v-book {
  margin-bottom: 25rpx;
}

.loading-center {
  position: absolute;
  top: 50%;
  left: 50%;
}

.loading {
  margin: 50rpx 0 50rpx 0;
}

.empty-tip {
  display: inline-block;
  width: 100%;
  text-align: center;
  position: absolute;
  top: 50%;
  /* left: 275rpx; */
}
